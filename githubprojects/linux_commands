sudo yum install package name -y
sudo yum remove package name -y
sudo systemctl start firewalld
sudo firewall-cmd --permanent --add-port=8080/tcp
sudo firewall-cmd --list-all
sudo firewall-cmd --reload or restart (try)
sudo update-alternatives --config java or python or etc (more softwares are in different versions)
sudo chattr +i filename (This is imutable means they cant modify or delete the file even we are a root user)
sudo chattr -i filename
sudo systemctl status firewalld
sudo yum install cronie -y
sudo systemctl status crond
crontab -e (to set the cron tab of a shell script)
crontan -l (To list all the cron jobs)
pkill node ,pkill java (this command is used to stop all the running process in node,java)
sudo find / -name nameof searching.
ssh-copy-id username@host
sudo timedatectl set-timezone Asia/Kolkata
sudo hostnamectl set-hostname givinghostname
zip -r foldername.zip foldername
unzip foldername.zip
ping hostname

tar -czvf archive_name.tar.gz folder_name
-c: Create a new archive.
-z: Compress the archive using gzip.
-v: Verbosely list the files processed.
-f: Specify the name of the archive.
tar -xvzf archive_name.tar.gz

tail -f filename(To see the live log of the file)
export PATH="             :$PATH"
alias psql='/usr/local/bin'(For example)
sudo npm install -g forever (-g stands for globally)
